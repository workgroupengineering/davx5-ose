<resources>

    <!-- colors -->

    <color name="grey200">#eeeeee</color>
    <color name="grey500">#9E9E9E</color>
    <!-- <color name="grey700">#616161</color> -->
    <color name="grey700">#282828</color>

    <color name="backgroundColor">@color/grey700</color>

    <color name="primaryColor">#5A8330</color>
    <color name="primaryLightColor">#536C37</color>
    <color name="primaryDarkColor">#2A4908</color>
    <color name="colorOnPrimary">@android:color/white</color>

    <color name="secondaryColor">#DC8836</color>
    <color name="secondaryLightColor">#DC8836</color>
    <color name="secondaryDarkColor">#872A01</color>
    <color name="colorOnSecondary">#282828</color>

    <color name="primaryTextColor">#FFFFFF</color>
    <color name="secondaryTextColor">#FFFFFF</color>

    <color name="errorColor">#882020</color>
    <color name="colorOnError">@android:color/black</color>

    <color name="colorSurface">#0A0A0A</color>


    <!-- app theme -->

    <style name="AppTheme.Base" parent="Theme.MaterialComponents"/>
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- see https://github.com/material-components/material-components-android/blob/master/docs/theming/Color.md for component color names -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>       <!-- additionally required for AppCompatActivity -->
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/colorSurface</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- AddAccountActivity -->

    <style name="account_list_card">
        <item name="android:layout_width">match_parent</item>
    </style>


    <!-- stepper (wizard) -->

    <style name="stepper_nav_bar">
        <item name="cardElevation">4dp</item>
    </style>


    <!-- widgets -->

    <color name="cardview_background">@color/secondaryLightColor</color>

</resources>
